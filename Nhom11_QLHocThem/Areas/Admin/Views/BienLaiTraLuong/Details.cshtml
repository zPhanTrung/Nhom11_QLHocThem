@using Nhom11_QLHocThem.Areas.Admin.Model.DTO
@model List<CTTraLuong_LopHoc>
@{
    ViewBag.Title = "Details";
}

<h2>Chi tiết biên lai</h2>

<div class="container">
    <div class="mt-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Mã lớp học</th>
                    <th scope="col">Tên lớp học</th>
                    <th scope="col">Tổng số buổi</th>
                    <th scope="col">Lương 1 buổi</th>
                    <th scope="col">Thành tiền</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0; }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.MaLopHoc</td>
                        <td>@item.TenLopHoc</td>
                        <td>@item.TongSoBuoi</td>
                        <td>@item.Luong1Buoi</td>
                        <td>@item.ThanhTien</td>
                        <td class="text-info">Chi tiết</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>