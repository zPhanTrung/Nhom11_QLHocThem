
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form method="post" action="/Admin/HocSinh/Create">

    <div class="container d-flex">
        <div class="d-flex flex-column col-3 row g-3">
            <div>
                <label class="form-label" for="mahocsinh">Mã học sinh</label>
                <input class="form-control" name="mahocsinh" id="mahocsinh" />
            </div>
            <div>
                <label class="form-label" for="tenhocsinh">Họ tên</label>
                <input class="form-control" name="tenhocsinh" id="tenhocsinh" />
            </div>
            <div>
                <label class="form-label" for="ngaysinh">Ngày sinh</label>
                <input class="form-control" type="date" name="ngaysinh" id="ngaysinh" />
            </div>
            <div>
                <label class="form-label" for="gioitinh">Giới tính</label>
                <select class="form-control" name="gioitinh" id="gioitinh">
                    <option value="true" selected>Nam</option>
                    <option value="false">Nữ</option>
                </select>
            </div>
            <div>
                <label class="form-label" for="diachi">Địa chỉ</label>
                <input class="form-control" name="diachi" id="diachi" />
            </div>
            <div>
                <label class="form-label" for="sdt">SDT</label>
                <input class="form-control" name="sdt" id="sdt" />
            </div>

            <div>
                <label class="form-label" for="mamiengiam">Miễn giảm</label>
                <select class="form-control" name="mamiengiam" id="mamiengiam">
                    <option value="" selected>...</option>
                    @{
                        foreach (KeyValuePair<string, int> item in ViewBag.MaMienGiam)
                        {
                            <option value=@item.Key>@item.Value%</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="col-8 mx-5 d-flex justify-content-center">
            <div class="col-7">
                <div class="col-10">
                    <label class="form-label" for="malophoc">Lớp học</label>
                    <div class="border border-secondary bg-white" style="height:150px">
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Toán</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Lý</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Hóa</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent" style="height:150px">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" >toán</div>
                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" >Lý</div>
                        <div class="tab-pane fade" id="pills-contact" role="tabpanel" >Hóa</div>
                    </div>
                </div>
                <div class="mt-4">
                    <button class="btn btn-secondary" onclick="window.history">Quay lại</button>
                    <button class="btn btn-primary mx-3" formaction="/Admin/HocSinh/Create">Thêm</button>
                </div>
            </div>
            

        </div>


    </div>

    
</form>