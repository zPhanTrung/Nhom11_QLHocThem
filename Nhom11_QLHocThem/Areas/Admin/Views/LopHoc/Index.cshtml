@using Nhom11_QLHocThem.Areas.Admin.Model
@model List<LopHoc_View>
@{
    ViewBag.Title = "Lớp học";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Lớp học</h3>

<form method="post" action="/HocSinh/TimKiem" class="d-flex mt-5">
    <div class="col-8 d-flex">
        <div class="col-2">
            <label class="form-label" for="malophoc">Mã lớp học</label>
            <input class="form-control" name="malophoc" id="malophoc" />
        </div>
        <div class="col-2">
            <label class="form-label" for="tenlophoc">Tên lớp học</label>
            <input class="form-control" name="tenlophoc" id="tenlophoc" />
        </div>
        <div class="col-2">
            <label class="form-label" for="tengiaovien">Tên giáo viên</label>
            <input class="form-control" name="tengiaovien" id="tengiaovien" />
        </div>
        <div class="align-self-end">
            <button class="btn btn-secondary d-flex">
                <i class="far fa-search p-0"></i>
            </button>
        </div>
    </div>
</form>

<form action="/Admin/LopHoc/Create" method="get" class="d-flex">
    <button class="btn btn-primary d-flex mb-4 mt-3">
        <div>Thêm lớp học</div>
    </button>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã lớp học</th>
            <th scope="col">Tên lớp học</th>
            <th scope="col">Giáo viên</th>
            <th scope="col">Ngày bắt đầu</th>
            <th scope="col">Ngày kết thúc</th>
            <th scope="col">Số lượng học sinh</th>
            <th scope="col">Học phí 1 buổi</th>
            <th scope="col">Môn học</th>
            <th scope="col">SĐT</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var item in Model)
            {
                i++;

                <tr class="user-select-none">
                    <td>@i</td>
                    <td>@item.MaLopHoc</td>
                    <td>@item.TenLopHoc</td>
                    <td>@item.TenGiaoVien</td>
                    <td>@item.NgayBatDau</td>
                    <td>@item.NgayKetThuc</td>
                    <td>@item.SoLuongHocSinh</td>
                    <td>@item.HocPhi1Buoi</td>
                    <td>@item.MonHoc</td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a class="btn text-success p-0 d-flex" id="edit" href="/Admin/LopHoc/Edit/@item.MaLopHoc">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="/Admin/HocSinh/Delete/@item.MaLopHoc" method="post">
                                <button class="btn text-danger p-0 d-flex" id="delete">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>

                    </td>
                </tr>

            }
        }
    </tbody>
</table>



