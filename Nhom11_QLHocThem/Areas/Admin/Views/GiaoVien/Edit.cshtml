@using Nhom11_QLHocThem.Areas.Admin.Model
@model GiaoVien
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật thông tin giáo viên</h2>
<div class="container">
    <div class="row">
        <div class="left col">
            <form method="post" action="/Admin/GiaoVien/Edit/@Model.MaGiaoVien">
                <div class="form-group d-none">
                    <label for="magiaovien">Mã giáo viên:</label>
                    <input type="text" value="@Model.MaGiaoVien" class="form-control" id="magiaovien" name="magiaovien" placeholder="">
                </div>
                <div class="form-group">
                    <label for="tengiaovien">Họ tên:</label>
                    <input type="text" value="@Model.TenGiaoVien" class="form-control" id="tengiaovien" name="tengiaovien">
                </div>
                <div class="form-group">
                    <label for="ngaysinh">Ngày sinh </label>
                    <input type="date" class="form-control" value="@Model.NgaySinh" name="ngaysinh">
                </div>

                <div class="form-group">
                    <div>
                        <label for="">Giới tính</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" checked type="radio" name="gioitinh" id="nam"
                               value="Nam">
                        <label class="form-check-label" for="nam">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gioitinh" id="nu"
                               value="Nữ">
                        <label class="form-check-label" for="nu">Nữ</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="diachi">Địa chỉ:</label>
                    <input type="text" value="@Model.DiaChi" class="form-control" id="diachi" name="diachi" placeholder="">
                </div>

                <div class="form-group">
                    <label for="sdt">Số điện thoại:</label>
                    <input type="text" value="@Model.SDT" class="form-control" id="sdt" name="sdt" placeholder="">
                </div>
                <div class="form-group">
                    <label for="mamonhoc">Môn học</label>
                    <select class="form-control" id="mamonhoc" name="mamonhoc">
                        <option value="@Model.MaMonHoc">Chọn môn học</option>
                        <option value="1">Toán</option>
                        <option value="2">Văn</option>
                        <option value="3">Anh</option>
                        <option value="4">Lý</option>
                        <option value="5">Hóa</option>
                        <option value="6">Sinh</option>
                        <option value="7">Sử</option>
                        <option value="8">Địa</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlMTT">Mức thanh toán</label>
                    <select class="form-control" name="mamtt" id="exampleFormControlMTT">
                        <option value="@Model.MaMTT" selected>Chọn mức thanh toán</option>
                        <option>MTT01</option>
                        <option>MTT02</option>
                        <option>MTT03</option>
                    </select>
                </div>
                @*<div class="form-group">
                    <label for="stk">Số tài khoản:</label>
                    <input type="text" value="@Model.TaiKhoanNganHang" class="form-control" id="stk" name="stk" placeholder="">
                </div>*@
                <div class="add mt-4">
                    <button type="submit" class="btn btn-primary mb-2">Cập nhật</button>
                </div>
            </form>
        </div>
        <div class="right col">

        </div>
    </div>
</div>

