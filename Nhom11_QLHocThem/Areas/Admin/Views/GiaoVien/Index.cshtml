@using Nhom11_QLHocThem.Areas.Admin.Model
@model List<GiaoVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách giáo viên</h2>

<div class="teacher mt-3">
    <div class="btn btn-primary">
        <a style="text-decoration:none" class="text-light" href="/Admin/GiaoVien/Create">Thêm</a>
    </div>
    <div class="mt-3">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Ngày sinh</th>
                    <th scope="col">Giới tính</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">SĐT</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0; } 
                @foreach (var item in Model)
                {
                    i++;
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.TenGiaoVien</td>
                    <td>@item.NgaySinh.ToShortDateString()</td>
                    <td>@item.GioiTinh</td>
                    <td>@item.DiaChi</td>
                    <td>@item.SDT</td>
                    <td class="text-info">
                        <a style="text-decoration:none" class="text-light btn btn-info btn-sm" href="/Admin/GiaoVien/Edit/@item.MaGiaoVien">
                            Chi tiết
                        </a>
                    </td>
                    <td class="text-info">
                        <a style="text-decoration:none" class="text-light btn btn-info btn-sm" href="/Admin/GiaoVien/Edit/@item.MaGiaoVien">
                            Sửa
                        </a>
                    </td>
                    <td class="text-info">
                        <form action="/Admin/GiaoVien/Delete/@item.MaGiaoVien" method="post">
                            <button class="text-light btn btn-danger btn-sm">
                                Xóa
                            </button>
                        </form>
                    </td>
                </tr>
                }


            </tbody>
        </table>
    </div>
    
</div>

